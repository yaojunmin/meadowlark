<div id="map" style="width:100%;height:60vh;"></div>
<script>
  let map
  async function iniMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      // 位置
      center: { lat: 44.0978126, lng: -120.0963654 },
      // 缩放级别
      zoom: 7,
    })
    const vacations = await fetch('/api/vacations').then(res => res.json())
    vacations.forEach(({name, location}) => {
      const marker = new google.maps.Marker({
        position: location.coordinates,
        map,
        title: name,
      })
    })
  }
</script>
<script src="/maps/api/js?key={{googleApiKey}}&callback=initMap" async defer></script>